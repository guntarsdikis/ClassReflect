# AWS Production Configuration
# Copy this to .env for AWS testing

# Mode Settings
USE_AWS=true
USE_LOCAL_DB=false  # Set to true to use local DB instead of Aurora

# Whisper Configuration
WHISPER_MODEL=base  # base, small, medium, large
MAX_EMPTY_POLLS=3   # Match EC2 behavior

# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# AWS Resources
SQS_QUEUE_URL=https://sqs.eu-west-2.amazonaws.com/573524060586/classreflect-processing-queue
S3_BUCKET=classreflect-audio-files-573524060586
DB_SECRET_ARN=arn:aws:secretsmanager:eu-west-2:573524060586:secret:classreflect/database/credentials-pBI0CD

