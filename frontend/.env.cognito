# ClassReflect Frontend Environment Configuration - Cognito Integration
# Copy this to .env.local and update with actual values after Terraform deployment
# Note: Vite requires VITE_ prefix for all environment variables

# AWS Configuration
VITE_AWS_REGION=eu-west-2

# Cognito Configuration (to be filled after terraform apply)
VITE_COGNITO_USER_POOL_ID=
VITE_COGNITO_CLIENT_ID=
VITE_COGNITO_DOMAIN=classreflect-auth

# Application URLs
VITE_APP_URL=https://classreflect.gdwd.co.uk
VITE_API_URL=https://api.classreflect.gdwd.co.uk

# Development URLs (override for local development)
# VITE_APP_URL=http://localhost:3000
# VITE_API_URL=http://localhost:3001

# Feature Flags
VITE_USE_COGNITO=false
VITE_ENABLE_MFA=false
VITE_DEBUG_AUTH=false